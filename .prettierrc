{
    "tabWidth": 4,
    "useTabs": false,
    "bracketSpacing": true,
    "trailingComma": "es5",
    "printWidth": 90,
    "singleQuote": false,
    "jsxSingleQuote": false,
    "bracketSameLine": true,
    "semi": true,
    "extensions": [".ts", ".tsx", ".js", ".css", ".scss", "less", ".json"],
    "arrowParens": "avoid",
    "proseWrap": "always",
    "overrides": [
      {
        "files": "*.test.ts",
        "options": {
          "printWidth": 120
        }
      }
    ]
}

